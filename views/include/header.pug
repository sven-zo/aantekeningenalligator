.mdl-layout.mdl-js-layout.mdl-layout--fixed-header#aa-static
  header.mdl-layout__header
    .mdl-layout__header-row
      span.mdl-layout-title
        a(href='/').aa-logo= __('site.title')
      .mdl-layout-spacer
      nav.mdl-navigation.mdl-layout--large-screen-only
        a.mdl-navigation__link(href='/') Home
        a.mdl-navigation__link(href='/courses') Courses
        a.mdl-navigation__link(href='/')= __('menu.home')
        a.mdl-navigation__link(href=sails.getUrlFor('Course.all'))= __('menu.courses')
        //-a.mdl-navigation__link(href='/') menu.home
        //-a.mdl-navigation__link(href='/courses') menu.courses
        a.mdl-navigation__link(href='') Link
        a.mdl-navigation__link(href='') Link
  .mdl-layout__drawer
    span.mdl-layout-title 📓🐊
    span.mdl-layout-title= __('site.titleShort')
    nav.mdl-navigation
      a.mdl-navigation__link(href='/') Home
      a.mdl-navigation__link(href='/courses') Courses
      a.mdl-navigation__link(href='/')= __('menu.home')
      a.mdl-navigation__link(href=sails.getUrlFor('Course.all'))= __('menu.courses')
      //-a.mdl-navigation__link(href='/') menu.home
      //-a.mdl-navigation__link(href='/courses') menu.courses
      a.mdl-navigation__link(href='') Link
      a.mdl-navigation__link(href='') Link
  main.mdl-layout__content
    .page-content.aa-dynamic
      block content
