.mdl-layout.mdl-js-layout.mdl-layout--fixed-header#aa-static
  header.mdl-layout__header
    .mdl-layout__header-row
      span.mdl-layout-title
        a(href='/').aa-logo= __('site.title')
      .mdl-layout-spacer
      nav.mdl-navigation.mdl-layout--large-screen-only
        a.mdl-navigation__link(href='/')= __('menu.home')
        a.mdl-navigation__link(href=sails.getUrlFor('Course.index'))= __('menu.courses')
        a.mdl-navigation__link(href=sails.getUrlFor('Category.index'))= __('menu.categories')
        if req.session.username
          a.mdl-navigation__link(href='#') 💎0
          a.mdl-navigation__link(href='/user')= req.session.username
          a.mdl-navigation__link(href='/logout') Log out
        else
          a.mdl-navigation__link(href='/login') Log in
  .mdl-layout__drawer
    span.mdl-layout-title= __('site.titleShort')
    nav.mdl-navigation
      a.mdl-navigation__link(href='/')= __('menu.home')
      a.mdl-navigation__link(href=sails.getUrlFor('Course.index'))= __('menu.courses')
      a.mdl-navigation__link(href=sails.getUrlFor('Category.index'))= __('menu.categories')
      a.mdl-navigation__link(href='') Link
  main.mdl-layout__content.aa-dynamic
    .page-content.aa-bg
      block content
