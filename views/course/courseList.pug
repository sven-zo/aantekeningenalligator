extends ../layout

block vars
  - var title='📓🐊 - Course'

block content
  if snackbar
    +info(__('courseAdd.snackbarMessage'), 'undo', 'undo')
  h1.display-4.aa-title= __('courseList.title')
  .aa-course-list-cards
    each course in courses
      +card(__('courseList.cardAction.gotoDetail'))(href='#',title=course.name, text=course.code, class=course.category.image)
