extends ../layout

block vars
  - var title='📓🐊 - Course'

block content
  br
  a(href=editUrl) Edit this course (mod)
  br
  a(href=deleteUrl) Delete this course (mod)
  h1.display-4.aa-title= course.name
  a(href=addUrl) Add a note (user 6+)
  table.mdl-data-table.mdl-js-data-table
    thead
      tr
        th.mdl-data-table__cell--non-numeric Name
        th --------------
        th Description
        th Details (user 6+)
    tbody
      each note in course.notes
        tr
          td.mdl-data-table__cell--non-numeric= note.name
          td
            a(href=note.fileUrl) Download
          td.mdl-data-table__cell--non-numeric= note.description
          td
            a(href=`/course/${course.code}/note/${note.name}`) Details
